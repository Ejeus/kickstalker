<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="@dimen/widget_margin">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:alpha="96"
      android:background="@drawable/kick_widget_background"
      android:orientation="vertical"
      android:paddingBottom="0dp"
      android:paddingLeft="0dp"
      android:paddingRight="0dp"
      android:paddingTop="0dp" >

      <ImageView
          android:id="@+id/projectImage"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:minHeight="34dp"
          android:maxHeight="34dp"
          android:paddingBottom="0dp"
          android:paddingLeft="1dp"
          android:paddingRight="1dp"
          android:paddingTop="1dp"
          android:background="@drawable/kick_widget_image"
          android:scaleType="centerCrop" />
      
      <ProgressBar
          android:id="@+id/progressFundingRunning"
          style="?android:attr/progressBarStyleHorizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:minHeight="6dp"
          android:maxHeight="6dp"
          android:paddingBottom="0dp"
          android:paddingLeft="0dp"
          android:paddingRight="0dp"
          android:paddingTop="0dp"
          android:progressDrawable="@drawable/kick_progressbar_running" />
      
      <ProgressBar
          android:id="@+id/progressFundingCompleted"
          style="?android:attr/progressBarStyleHorizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:minHeight="6dp"
          android:maxHeight="6dp"
          android:paddingBottom="0dp"
          android:paddingLeft="0dp"
          android:paddingRight="0dp"
          android:paddingTop="0dp"
          android:progressDrawable="@drawable/kick_progressbar_completed" />
      
      <ProgressBar
          android:id="@+id/progressFundingFailed"
          style="?android:attr/progressBarStyleHorizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:minHeight="6dp"
          android:maxHeight="6dp"
          android:paddingBottom="0dp"
          android:paddingLeft="0dp"
          android:paddingRight="0dp"
          android:paddingTop="0dp"
          android:progressDrawable="@drawable/kick_progressbar_failed" />

      <TextView
          android:id="@+id/fieldWidgetText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingBottom="3dp"
          android:paddingLeft="5dp"
          android:paddingRight="5dp"
          android:paddingTop="3dp"
          android:text="TextView"
          android:textColor="@color/white"
          android:textSize="10sp" />

  </LinearLayout>

</FrameLayout>